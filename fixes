import re

def parse_error_string(error_string):
    # Define the pattern to match your specific format
    pattern = r'(.*\.py):(\d+):(\d+):(C\d+): (.+)'
    
    # Search for the pattern in the provided string
    match = re.search(pattern, error_string)
    
    if match:
        # Extract each component from the regex groups
        path = match.group(1)
        line_number = int(match.group(2))
        row_number = int(match.group(3))
        code = match.group(4)
        error = match.group(5)
        
        # Return the extracted information as a dictionary
        return {
            "Path of py file": path,
            "Line number": line_number,
            "Row number": row_number,
            "Code": code,
            "Error": error
        }
    else:
        return None  # Return None if the string doesn't match the expected format
