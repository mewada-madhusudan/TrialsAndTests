from PyQt6.QtWidgets import QMessageBox

class LauncherDB:
    # Your existing methods and attributes
    
    def export_to_excel(self, filename):
        # Your existing export code here
        # ...
        
        # After export is complete, show a popup
        self.show_export_complete_popup(filename)
    
    def show_export_complete_popup(self, filename):
        """Shows a popup notification when Excel export is complete."""
        msg_box = QMessageBox()
        msg_box.setWindowTitle("Export Complete")
        msg_box.setText(f"Data has been successfully exported to {filename}")
        msg_box.setIcon(QMessageBox.Icon.Information)
        msg_box.exec()
